{
  "name": "node-n-body",
  "version": "1.0.0",
  "homepage":"https://mfn.uber.space/",
  "scripts": {
    "client_development": "cd client && npm start",
    "server_development": "nodemon server.js",
    "development": "concurrently --kill-others-on-fail \"npm run server_development\" \"npm run client_development\"",
    "client_production": "cd client && npm run build",
    "server_production": "node server.js",
    "production": "concurrently --kill-others-on-fail \"npm run client_production\" \"npm run server_production\""
  },
  "dependencies": {
    "express": "^4.16.4",
    "ssh2-sftp-client": "^5.1.3"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  },
  "nodemonConfig": {
    "ignore": ["data/*"]
  }
}
